{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@user": ["src/general/users"],
      "@user/*": ["src/general/users/*"],
      "@auth": ["src/general/auth"],
      "@auth/*": ["src/general/auth/*"],
      "@prisma": ["src/global/libs/prisma"],
      "@prisma/*": ["src/global/libs/prisma/*"],
      "@hashing": ["src/global/libs/encryption"],
      "@hashing/*": ["src/global/libs/encryption/*"],
      "@common": ["src/global/common"],
      "@common/*": ["src/global/common/*"],
      "@seed": ["src/global/libs/seed"],
      "@seed/*": ["src/global/libs/seed/*"],
      "@tasks": ["src/apps/tasks"],
      "@tasks/*": ["src/apps/tasks/*"],
    }
  }
}
